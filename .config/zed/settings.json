// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_family": "SF Mono",
  "ui_font_family": "SF Pro",
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Simple Darker"
  },
  "languages": {
    "LaTeX": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "tex-fmt",
          "arguments": ["--stdin"]
        }
      }
    }
  },
  "lsp": {
    "ltex": {
      "settings": {
        "ltex": {
          "dictionary": {
            "en-US": [
              "Bhargav",
              "Samineni",
              "antichain",
              "antichains",
              "Sperner",
              "Erd{\"o}s",
              "Ferdous",
              "Mahantesh",
              "Halapannavar",
              "subgraph",
              "subgraphs"
            ]
          }
        }
      }
    },
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": ["--query-driver=/opt/homebrew/bin/g++-14"]
      }
    }
  }
}
